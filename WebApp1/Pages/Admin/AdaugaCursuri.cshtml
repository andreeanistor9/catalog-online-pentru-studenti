@page
@model WebApp1.Pages.Admin.AdaugaCursuriModel
@{
}
<form method="post">
	<div class="row mb-3">
		<label class="col-sm-1 col-form-label"> Curs:  </label><br />
		<div class="col-sm-4">
			<input class="form-control" asp-for="@Model.Curs.Denumire" />
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-1 col-form-label"> An:  </label><br />
		<div class="col-sm-4">
		<input class="form-control" asp-for="@Model.Curs.An" min="1" max="4"/>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-1 col-form-label"> Profesor:  </label><br />
		<div class="col-sm-4">
		<select class="form-select" asp-for="@Model.Curs.ProfesorId" asp-items="Model.profesor"></select><br />
		</div>
	</div>
	<div>
		<input class="btn btn-primary" type="submit" value="Adauga Curs"/>
	</div>
</form>	